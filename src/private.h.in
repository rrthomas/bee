// Optimization
// Hint that `x` is usually true/false.
// https://gcc.gnu.org/onlinedocs/gcc/Other-Builtins.html
#if @HAVE___BUILTIN_EXPECT@ == 1
#define likely(x) __builtin_expect(!!(x), 1)
#define unlikely(x) __builtin_expect(!!(x), 0)
#else
#define likely(x) (x)
#define unlikely(x) (x)
#endif


// Errors
#define THROW(code)                             \
    do {                                        \
        error = code;                           \
        goto error;                             \
    } while (0)

#define THROW_IF_ERROR(code)                    \
    if (code != BEE_ERROR_OK)                   \
        THROW(code)


// Stack access
#define POP(ptr)                                        \
    THROW_IF_ERROR(bee_pop_stack(D0, DSIZE, &DP, ptr))
#define PUSH(v)                                                 \
    do {                                                        \
        THROW_IF_ERROR(bee_push_stack(D0, DSIZE, &DP, v));      \
    } while (0)

#define POP_RETURN(ptr)                                 \
    THROW_IF_ERROR(bee_pop_stack(S0, SSIZE, &SP, ptr))
#define PUSH_RETURN(v)                                          \
    do {                                                        \
        THROW_IF_ERROR(bee_push_stack(S0, SSIZE, &SP, v));      \
    } while (0)


// Memory access

// Align a VM address
#define ALIGN(a)                                                \
    (((UWORD)(a) + bee_WORD_BYTES - 1) & (-bee_WORD_BYTES))

// Check whether a VM address is aligned
#define IS_ALIGNED(a)                                           \
    (((uint8_t *)((UWORD)(a) & (bee_WORD_BYTES - 1)) == 0))

// Portable left shift (the behaviour of << with overflow (including on any
// negative number) is undefined)
#define LSHIFT(n, p)                            \
    (((n) & ((UWORD)-1 >> p)) << p)

// Portable arithmetic right shift (the behaviour of >> on signed
// quantities is implementation-defined in C99)
#define ARSHIFT(n, p)                                           \
    (((n) >> (p)) | (LSHIFT(-((n) < 0), (bee_WORD_BIT - p))))


// Traps
WORD trap(WORD code);
WORD trap_libc(UWORD function);
