#ifndef BUMBLE_BEE
#define BUMBLE_BEE


#include <stdint.h>
#include <limits.h>


// Basic types
typedef intptr_t bee_word_t;
typedef uintptr_t bee_uword_t;
#define BUMBLE_WORD_BYTES @SIZEOF_INTPTR_T@
#define BUMBLE_WORD_BIT (BUMBLE_WORD_BYTES * 8)
#define BUMBLE_WORD_MIN INTPTR_MIN
#define BUMBLE_UWORD_MAX UINTPTR_MAX

// VM registers
#define R(reg, type)                            \
    extern type bee_##reg;
#include <bee/registers.h>
#undef R

// Error codes
enum {
    BUMBLE_ERROR_OK = 0,
    BUMBLE_ERROR_INVALID_OPCODE = -1,
    BUMBLE_ERROR_STACK_UNDERFLOW = -2,
    BUMBLE_ERROR_STACK_OVERFLOW = -3,
    BUMBLE_ERROR_INVALID_LOAD = -4,
    BUMBLE_ERROR_INVALID_STORE = -5,
    BUMBLE_ERROR_UNALIGNED_ADDRESS = -6,
    BUMBLE_ERROR_INVALID_LIBRARY = -16,
    BUMBLE_ERROR_INVALID_FUNCTION = -17,
    BUMBLE_ERROR_BREAK = -256,
};

// Stack access
int bee_pop_stack(bee_word_t *s0, bee_uword_t ssize, bee_uword_t *sp, bee_word_t *val_ptr);
int bee_push_stack(bee_word_t *s0, bee_uword_t ssize, bee_uword_t *sp, bee_word_t val);

// Default stacks size in words
#define BUMBLE_DEFAULT_STACK_SIZE   4096

// Miscellaneous routines
bee_word_t bee_run(void);
int bee_init(bee_word_t *c_array, bee_uword_t memory_size, bee_uword_t stack_size, bee_uword_t return_stack_size);
int bee_init_defaults(bee_word_t *c_array, bee_uword_t memory_size);
void bee_register_args(int argc, const char *argv[]);


#endif
